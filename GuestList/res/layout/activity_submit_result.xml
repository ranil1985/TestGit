<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    android:orientation="vertical"
    android:weightSum="24" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <TextView
            style="@style/header_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/submit_edit_event_text" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22"
        android:background="@android:color/white" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/cloudImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/submit_img" />

            <ImageView
                android:id="@+id/imageSuccess"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/cloudImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/submit_success" />

            <TextView
                 android:id="@+id/successtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageSuccess"
                 android:layout_marginTop="20dp"
                android:text="@string/submit_success_text" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>